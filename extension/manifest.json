{
	"name"				: "Mcfog's Moe.Fm",
	"version"			: "0.1.2000",
	"verno"				: "0",
	"description"		: "Moe.fm 萌否电台",
	"icons": {
	  "128": "images/moefou.png"
	},
	"__options_page"		: "options.html",
	"background_page"	: "background.html",
	"content_scripts"	: [{
		"all_frames"	: true,
		"js"				: [ "scripts/require.js", "scripts/inject/login.js" ],
		"matches"		: [ "http://moe.fm/login?no_invitation=1&mmf_inject=1" ],
		"run_at"		: "document_idle"
	}],

	"browser_action"	: {
		"default_icon" : "images/radio.png",
		"popup" : "popup.html"
	},
	
	"permissions" : [ "unlimited_storage", "*://moe.fm/*", "*://*.moefou.org/*", "*://moefou.org/*" ]
}
